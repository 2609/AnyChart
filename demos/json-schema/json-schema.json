{
  "$schema": "http://json-schema.org/draft-04/schema",
  "description": "ACDVF data schema",
  "type": "object",
  "properties": {
    "chart": {
      "type": "object",
      "oneOf": [
        { "$ref": "#/definitions/anychart.pie.Chart" },
        { "$ref": "#/definitions/anychart.cartesian.Chart" }
      ]
    }
  },
  "definitions": {
    "anychart.Chart": {
      "type": "object",
      "allOf": [
        { "$ref": "#/definitions/anychart.elements.Base" }
      ],
      "properties": {
        "background": { "$ref": "#/definitions/anychart.elements.Background" },
        "margin": { "$ref": "#/definitions/anychart.utils.Space" },
        "padding": { "$ref": "#/definitions/anychart.utils.Space" },
        "title": { "$ref": "#/definitions/anychart.elements.Title" },
        "legend": { "$ref": "#/definitions/anychart.elements.Legend" }
      }
    },
    "anychart.cartesian.Chart": {
      "type": "object",
      "allOf": [
        { "$ref": "#/definitions/anychart.Chart" }
      ],
      "properties": {
        "type": { "enum": [ "cartesian" ] },
        "grids": {
          "type": "array",
          "items": { "$ref": "#/definitions/anychart.elements.Grid" }
        },
        "minorGrids": {
          "type": "array",
          "items": { "$ref": "#/definitions/anychart.elements.Grid" }
        },
        "xAxes": {
          "type": "array",
          "items": { "$ref": "#/definitions/anychart.elements.Axis" }
        },
        "yAxes": {
          "type": "array",
          "items": { "$ref": "#/definitions/anychart.elements.Axis" }
        },
        "lineAxesMarkers": {
          "type": "array",
          "items": { "$ref": "#/definitions/anychart.elements.LineMarker" }
        },
        "rangeAxesMarkers": {
          "type": "array",
          "items": { "$ref": "#/definitions/anychart.elements.RangeMarker" }
        },
        "textAxesMarkers": {
          "type": "array",
          "items": { "$ref": "#/definitions/anychart.elements.TextMarker" }
        },
        "series": {
          "type": "array",
          "items": {
            "type": "object",
            "anyOf": [
              { "$ref": "#/definitions/anychart.cartesian.series.Base" },
              { "$ref": "#/definitions/anychart.cartesian.series.BaseWithMarkers" }
            ]
          }
        },
        "barGroupsPadding": {
          "type": [ "number", "string" ]
        },
        "barsPadding": {
          "type": [ "number", "string" ]
        }
      },
      "required": ["type"]
    },
    "anychart.cartesian.series.Base": {
      "type": "object",
      "allOf": [
        { "$ref": "#/definitions/anychart.elements.Base" }
      ],
      "properties": {
        "data": { "$ref": "#/definitions/data" },
        "name": {
          "type": "string"
        },
        "color": {
          "type": "string"
        },
        "stroke": { "$ref": "#/definitions/stroke"},
        "hoverStroke": { "$ref": "#/definitions/stroke"},
        "fill": { "$ref": "#/definitions/fill"},
        "hoverFill": { "$ref": "#/definitions/fill"},
        "connectMissing": {
          "type": "boolean"
        },
        "seriesType": {
          "type": "string"
        }
      }
    },
    "anychart.cartesian.series.BaseWithMarkers": {
      "type": "object",
      "allOf": [
        { "$ref": "#/definitions/anychart.cartesian.series.Base" }
      ],
      "properties": {
        "markers": { "$ref": "#/definitions/anychart.elements.Multimarker" },
        "hoverMarkers": { "$ref": "#/definitions/anychart.elements.Multimarker" }
      }
    },
    "anychart.pie.Chart": {
      "type": "object",
      "allOf": [
        { "$ref": "#/definitions/anychart.Chart" }
      ],
      "properties": {
        "type": { "enum": [ "pie" ] },
        "radius": {
          "type": [ "string", "number" ]
        },
        "innerRadius": {
          "type": [ "string", "number" ]
        },
        "explode":  {
          "type": [ "string", "number" ]
        },
        "startAngle":  {
          "type": [ "string", "number" ]
        },
        "sort": { "$ref": "#/definitions/anychart.utils.Sort" },
        "data": { "$ref": "#/definitions/data" }
      },
      "required": ["type"]
    },



    "anychart.elements.Axis": {
      "type": "object",
      "allOf": [
        { "$ref": "#/definitions/anychart.elements.Base" }
      ],
      "properties": {
        "stroke": { "$ref": "#/definitions/stroke" },
        "name": {
          "type": "string"
        },
        "length": {
          "type": [ "null", "number" ]
        },
        "offsetX": {
          "type": "number"
        },
        "offsetY": {
          "type": "number"
        },
        "orientation": { "$ref": "#/definitions/anychart.utils.Orientation" },
        "drawFirstLabel": {
          "type": "boolean"
        },
        "drawLastLabel": {
          "type": "boolean"
        },
        "overlapMode": { "$ref": "#/definitions/anychart.elements.Axis.OverlapMode" },
        "labels": { "$ref": "#/definitions/anychart.elements.Multilabel" },
        "minorLabels": { "$ref": "#/definitions/anychart.elements.Multilabel" },
        "ticks": { "$ref": "#/definitions/anychart.elements.Ticks" },
        "minorTicks": { "$ref": "#/definitions/anychart.elements.Ticks" },
        "title": { "$ref": "#/definitions/anychart.elements.Title" }
      }
    },
    "anychart.elements.Axis.OverlapMode": {
      "enum": [ "nooverlap", "overlap" ]
    },
    "anychart.elements.Background": {
      "type": "object",
      "allOf": [
        { "$ref": "#/definitions/anychart.elements.Base" },
        { "$ref": "#/definitions/shape" }
      ],
      "properties": {
        "cornerType": { "$ref": "#/definitions/anychart.elements.Background.CornerType" },
        "corners": {
          "type": "array",
          "items": {
            "type": [ "string" , "number" ]
          }
        }
      }
    },
    "anychart.elements.Background.CornerType": { "enum": [ "none", "cut", "round", "roundInner" ] },
    "anychart.elements.Base": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "zIndex": {
          "type": "number"
        }
      }
    },
    "anychart.elements.Grid": {
      "type": "object",
      "allOf": [
        { "$ref": "#/definitions/anychart.elements.Base" }
      ],
      "properties": {
        "stroke":  { "$ref": "#/definitions/stroke" },
        "direction": { "$ref": "#/definitions/anychart.utils.Direction" },
        "oddFill":  { "$ref": "#/definitions/fill" },
        "evenFill":  { "$ref": "#/definitions/fill" },
        "drawFirstLine": {
          "type": [ "boolean" ]
        },
        "drawLastLine": {
          "type": [ "boolean" ]
        },
        "minor": {
          "type": [ "boolean" ]
        },
        "orientation": {
          "type": "string"
        }
      }
    },
    "anychart.elements.Label": {
      "type": "object",
      "allOf": [
        { "$ref": "#/definitions/anychart.elements.Base" },
        { "$ref": "#/definitions/anychart.elements.Text" }
      ],
      "properties": {
        "adjustFontSize": {
          "type": [ "boolean", "array"],
          "items": {
            "type": "boolean"
          }
        },
        "minFontSize": {
          "type": [ "number", "string"]
        },
        "maxFontSize": {
          "type": [ "number", "string"]
        },
        "offsetY": {
          "type": [ "number", "string"]
        },
        "offsetX": {
          "type": [ "number", "string"]
        },
        "anchor": { "$ref": "#/definitions/anychart.utils.NinePositions" },
        "position": { "$ref": "#/definitions/anychart.utils.NinePositions" },
        "rotation": {
          "type": "number"
        },
        "background": { "$ref": "#/definitions/anychart.elements.Background" },
        "padding":  { "$ref": "#/definitions/anychart.utils.Space" }
      }

    },
    "anychart.elements.LineMarker": {
      "type": "object",
      "allOf": [
        { "$ref": "#/definitions/anychart.elements.Base" }
      ],
      "properties": {
        "stroke": { "$ref": "#/definitions/stroke" },
        "value": {
          "type": "number"
        },
        "direction": { "$ref": "#/definitions/anychart.utils.Direction" }
      }
    },
    "anychart.elements.Legend": {
      "type": "object",
      "allOf": [
        { "$ref": "#/definitions/anychart.elements.Text" }
      ],
      "properties": {
        "iconTextSpacing": {
          "type": "number"
        },
        "itemsSpacing": {
          "type": "number"
        },
        "position": { "$ref": "#/definitions/anychart.utils.Orientation" },
        "align": { "$ref": "#/definitions/anychart.utils.Align" },
        "itemsLayout": { "$ref": "#/definitions/anychart.elements.Legend.Layout" },
        "items": {
          "type": "array",
          "items": {
            "type": [ "string", "number", "object" ]
          }
        },
        "background": { "$ref": "#/definitions/anychart.elements.Background" },
        "margin":  { "$ref": "#/definitions/anychart.utils.Space" },
        "padding":  { "$ref": "#/definitions/anychart.utils.Space" },
        "title":  { "$ref": "#/definitions/anychart.elements.Title" },
        "titleSeparator": { "$ref": "#/definitions/anychart.elements.Separator" },
        "paginator": { "$ref": "#/definitions/anychart.ui.Paginator" }
      }
    },
    "anychart.elements.Legend.Layout": { "enum": [ "vertical", "horizontal", "table" ] },
    "anychart.elements.Marker.Type": {
      "enum": [ "star4", "star5", "star6", "star7", "star10", "triangleup", "triangledown", "cross", "diamond", "diagonalcross", "circle", "square" ]
    },
    "anychart.elements.Multilabel": {
      "type": "object",
      "allOf": [
        { "$ref": "#/definitions/anychart.elements.Base" },
        { "$ref": "#/definitions/anychart.elements.Text" }
      ],
      "properties": {
        "rotation": {
          "type": "number"
        },
        "anchor": { "$ref": "#/definitions/anychart.utils.NinePositions" },
        "offsetX": {
          "type": "number"
        },
        "offsetY": {
          "type": "number"
        },
        "padding": { "$ref": "#/definitions/anychart.utils.Space" },
        "background": { "$ref": "#/definitions/anychart.elements.Background" }
      }
    },
    "anychart.elements.Multimarker": {
      "type": "object",
      "allOf": [
        { "$ref": "#/definitions/anychart.elements.Base" },
        { "$ref": "#/definitions/shape" }
      ],
      "properties": {
        "position": { "$ref": "#/definitions/anychart.utils.NinePositions" },
        "anchor": { "$ref": "#/definitions/anychart.utils.NinePositions" },
        "type": { "$ref": "#/definitions/anychart.elements.Marker.Type" },
        "size": {
          "type": "number"
        },
        "offsetX": {
          "type": "number"
        },
        "offsetY": {
          "type": "number"
        },
        "enabled": {
          "type": "boolean"
        },
        "customMarkerSettings": {
          "type": "object",
          "properties": {
            "position": {
              "$ref": "#/definitions/anychart.utils.NinePositions"
            },
            "anchor": {
              "$ref": "#/definitions/anychart.utils.NinePositions"
            },
            "type": {
              "$ref": "#/definitions/anychart.elements.Marker.Type"
            },
            "size": {
              "type": "number"
            },
            "offsetX": {
              "type": "number"
            },
            "offsetY": {
              "type": "number"
            },
            "enabled": {
              "type": "boolean"
            }
          }
        }
      }
    },
    "anychart.elements.RangeMarker": {
      "type": "object",
      "allOf": [
        { "$ref": "#/definitions/anychart.elements.Base" }
      ],
      "properties": {
        "fill": { "$ref": "#/definitions/fill" },
        "from": {
          "type": "number"
        },
        "to": {
          "type": "number"
        },
        "direction": { "$ref": "#/definitions/anychart.utils.Direction" }
      }
    },
    "anychart.elements.Separator": {
      "type": "object",
      "allOf": [
        { "$ref": "#/definitions/anychart.elements.Base" },
        { "$ref": "#/definitions/shape" }
      ],
      "properties": {
        "margin":  { "$ref": "#/definitions/anychart.utils.Space" },
        "width": {
          "type": [ "string" , "number" , "null" ]
        },
        "height": {
          "type": [ "string" , "number" , "null" ]
        },
        "orientation": {
          "type": "string"
        }
      }
    },
    "anychart.elements.Text": {
      "type": "object",
      "allOf": [
        { "$ref": "#/definitions/anychart.elements.Base" }
      ],
      "properties": {
        "align": {
          "type": "string"
        },
        "orientation": {
          "type": "string"
        },
        "useHtml": {
          "type": [ "boolean", "null" ]
        },
        "fontSize": {
          "type": [ "string" , "number" ]
        },
        "color": {
          "type": [ "string", "null" ]
        },
        "fontFamily": {
          "type": [ "string", "null" ]
        },
        "direction": {
          "enum": [ "ltr", "rtl", "null" ]
        },
        "selectable": {
          "type": [ "boolean", "null" ]
        },
        "hAlign": {
          "enum": [ "left", "start", "center", "end", "right" , "null" ]
        },
        "textWrap": { "enum": [ "noWrap" , "byLetter", "null" ] },
        "width": {
          "type": [ "string" , "number" , "null" ]
        },
        "height": {
          "type": [ "string" , "number" , "null" ]
        },
        "fontStyle": {
          "enum": [ "normal", "italic", "oblique", "null" ]
        },
        "fontVariant": {
          "enum": [ "normal", "small-caps", "null" ]
        },
        "fontWeight": {
          "type": [ "string" , "number", "null" ]
        },
        "letterSpacing": {
          "type": [ "string" , "number", "null" ]
        },
        "decoration": {
          "enum": [ "blink", "line-through", "overline", "underline", "none", "null" ]
        },
        "vAlign": {
          "enum": [ "top", "middle", "bottom", "null" ]
        },
        "opacity": {
          "type": [ "number", "null"],
          "minimum": 0,
          "maximum": 1
        },
        "textIndent": {
          "type": [ "number", "null" ]
        },
        "lineHeight": {
          "type": [ "string" , "number", "null" ]
        },
        "textOverflow": {
          "type": [ "string", "null" ]
        }
      }
    },
    "anychart.elements.TextMarker": {
      "type": "object",
      "allOf": [
        { "$ref": "#/definitions/anychart.elements.Text" }
      ],
      "properties": {
        "stroke": { "$ref": "#/definitions/stroke" },
        "value": {
          "type": [ "number" ]
        },
        "text": {
          "type": [ "string" ]
        },
        "width": {
          "type": [ "number", "string"]
        },
        "height": {
          "type": [ "number", "string"]
        },
        "orientation": { "$ref": "#/definitions/anychart.utils.Orientation" },
        "align": { "$ref": "#/definitions/anychart.elements.TextMarker.Align" },
        "anchor": { "$ref": "#/definitions/anychart.utils.NinePositions" }
      }
    },
    "anychart.elements.TextMarker.Align": {
      "enum": [ "near", "center", "far" ]
    },
    "anychart.elements.Ticks": {
      "type": "object",
      "properties": {
        "length": {
          "type": "number"
        },
        "position": {
          "$ref": "#/definitions/anychart.elements.Ticks.Position"
        },
        "stroke": {
          "$ref": "#/definitions/stroke"
        },
        "enabled": {
          "type": "boolean"
        }
      },
      "required": ["length", "position", "stroke", "enabled"]
    },
    "anychart.elements.Ticks.Position": { "enum": [ "inside", "outside" ] },
    "anychart.elements.Title": {
      "type": "object",
      "allOf": [
        { "$ref": "#/definitions/anychart.elements.Text" }
      ],
      "properties": {
        "orientation": { "$ref": "#/definitions/anychart.utils.Orientation" },
        "align": { "$ref": "#/definitions/anychart.utils.Align" },
        "background": { "$ref": "#/definitions/anychart.elements.Background" },
        "margin":  { "$ref": "#/definitions/anychart.utils.Space" },
        "padding":  { "$ref": "#/definitions/anychart.utils.Space" }
      }
    },
    "anychart.elements.Tooltip": {
      "type": "object",
      "allOf": [
        { "$ref": "#/definitions/anychart.elements.Base" }
      ],
      "properties": {
        "title":  { "$ref": "#/definitions/anychart.elements.Title" },
        "separator": { "$ref": "#/definitions/anychart.elements.Separator" },
        "content": { "$ref": "#/definitions/anychart.elements.Label" },
        "background": { "$ref": "#/definitions/anychart.elements.Background" },
        "padding": { "$ref": "#/definitions/anychart.utils.Space" },
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        },
        "anchor": { "$ref": "#/definitions/anychart.utils.NinePositions" },
        "visible": {
          "type": "boolean"
        },
        "hideDelay": {
          "type": "number"
        },
        "allowLeaveScreen": {
          "type": "boolean"
        },
        "isFloating": {
          "type": "boolean"
        }
      },
      "required": ["x", "y", "anchor", "visible", "hideDelay"]
    },



    "anychart.ui.Paginator": {
      "type": "object",
      "allOf": [
        { "$ref": "#/definitions/anychart.elements.Text" }
      ],
      "properties": {
        "orientation": { "$ref": "#/definitions/anychart.utils.Orientation" },
        "layout": { "$ref": "#/definitions/anychart.ui.Paginator.Layout" },
        "pageCount": {
          "type": [ "number", "string" ]
        },
        "currentPage": {
          "type": [ "number", "string" ]
        },
        "margin":  { "$ref": "#/definitions/anychart.utils.Space" },
        "padding": { "$ref": "#/definitions/anychart.utils.Space" },
        "background": { "$ref": "#/definitions/anychart.elements.Background" },
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        },
        "anchor": { "$ref": "#/definitions/anychart.utils.NinePositions" },
        "visible": {
          "type": "boolean"
        },
        "hideDelay": {
          "type": "number"
        },
        "allowLeaveScreen": {
          "type": "boolean"
        },
        "isFloating": {
          "type": "boolean"
        }
      },
      "required": ["x", "y", "anchor", "visible", "hideDelay"]
    },
    "anychart.ui.Paginator.Layout": { "enum": [ "vertical", "horizontal"] },



    "anychart.utils.Align": { "enum": [ "center", "top", "left", "right", "bottom" ] },
    "anychart.utils.Direction": { "enum": [ "vertical", "horizontal" ]},
    "anychart.utils.NinePositions": {
      "enum": [ "lefttop", "top", "righttop", "leftcenter", "center", "rightcenter", "leftbottom", "bottom", "rightbottom" ]
    },
    "anychart.utils.Orientation": { "enum": [ "top", "left", "right", "bottom" ] },
    "anychart.utils.Sort": { "enum": [ "asc", "desc", "none" ] },
    "anychart.utils.Space": {
      "properties": {
        "top": {
          "type": "number"
        },
        "left": {
          "type": "number"
        },
        "right": {
          "type": "number"
        },
        "bottom": {
          "type": "number"
        }
      },
      "required": ["top", "left", "right", "bottom"]
    },



    "data": {
      "type": "array",
      "items": {
        "type": [ "number", "string", "object", "array" ],
        "properties": {
          "x": {
            "type": [ "string", "number" ]
          },
          "y": {
            "type": [ "string", "number" ]
          },
          "fill": { "$ref": "#/definitions/fill" },
          "stroke": { "$ref": "#/definitions/stroke" },
          "hoverFill": { "$ref": "#/definitions/fill" },
          "hoverStroke": { "$ref": "#/definitions/stroke" }
        }
      }
    },



    "shape": {
      "type": "object",
      "properties": {
        "fill": { "$ref": "#/definitions/fill" },
        "stroke": { "$ref": "#/definitions/stroke" }
      }
    },
    "fill": {
      "type": [ "null", "string", "object" ],
      "oneOf": [
        { "type": "null"},
        { "$ref": "#/definitions/linearGradientFill" },
        { "$ref": "#/definitions/radialGradientFill" },
        { "$ref": "#/definitions/solidFill" },
        { "$ref": "#/definitions/pattern" },
        { "$ref": "#/definitions/hatchFill" }
      ]
    },
    "stroke": {
      "type": [ "null", "string", "object" ],
      "oneOf": [
        { "type": "null"},
        { "$ref": "#/definitions/solidStroke" },
        { "$ref": "#/definitions/linearGradientStroke" },
        { "$ref": "#/definitions/radialGradientStroke" }
      ]
    },
    "hatchFill": {
      "type": "object",
      "properties": {
        "type": { "enum": [ "hatchFill" ] },
        "hatchType": {
          "type": "number",
          "minimum": 0,
          "maximum": 31
        },
        "color": {
          "type": "string"
        },
        "thickness": {
          "type": "number"
        },
        "size": {
          "type": "number"
        }
      },
      "required": ["type", "hatchType", "color", "thickness", "size"]
    },
    "pattern": {
      "type": "object",
      "properties": {
        "children": {
          "type": "array",
          "items": { "$ref": "#/definitions/primitive" }
        },
        "bounds": { "$ref": "#/definitions/acgraph.math.Rect" },
        "type": { "enum": [ "pattern" ] }
      },
      "required": ["type", "children", "bounds"]
    },
    "solidFill": {
      "type": [ "string", "object" ],
      "properties": {
        "color": {
          "type": "string"
        },
        "opacity": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        }
      },
      "required": ["color", "opacity"]
    },
    "solidStroke": {
      "type": [ "string", "object" ],
      "properties": {
        "color": {
          "type": "string"
        },
        "thickness": {
          "type": "number"
        },
        "opacity": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "dash": {
          "type": "string"
        },
        "linejoin": {
          "enum": ["miter", "round", "bevel"]
        },
        "linecap": {
          "enum": ["butt", "round", "square"]
        }
      },
      "required": ["color"]
    },
    "radialGradientFill": {
      "type": "object",
      "properties": {
        "type": { "enum": [ "RadialGradientFill" ] },
        "keys":  { "$ref": "#/definitions/gradientKeys" },
        "cx": {
          "type": "number"
        },
        "cy": {
          "type": "number"
        },
        "fx": {
          "type": "number"
        },
        "fy": {
          "type": "number"
        },
        "opacity": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        }
