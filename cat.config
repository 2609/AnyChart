[build]
command = ./build contrib && ./build compile@COMPILE_PARAMETER @DOCS_PARAMETER

[test_group:api]
type = html
source_type = path
source_path = ./out/docs/develop/tests/*.html
screenshot_message = 'chart draw'
parameter = @DOCS_PARAMETER
parameter_value = && ./build docs

[test_group:qa_tests]
type = html
source_type = git
git_path = git@github.com:AnyChart/ACDVF-tests.git
git_name = ACDVF-tests
source_path = ./tests/*.html;./tests/*/*.html;./tests/*/*/*.html;./tests/*/*/*/*.html;
screenshot_message = 'chart draw'


[test_group:playground-samples]
type = html
source_type = git
git_path = git@github.com:AnyChart/ACDVF-tests.git
git_name = ACDVF-tests
source_path = ./playground-samples/*/*.html
screenshot_message = 'chart draw'


[test_group:licence]
type = html
source_type = git
git_path = git@github.com:AnyChart/ACDVF-tests.git
git_name = ACDVF-tests
source_path = ./licence/*.html;./licence/*/*.html;
screenshot_message = 'chart draw'
parameter = @COMPILE_PARAMETER
parameter_value = _each
